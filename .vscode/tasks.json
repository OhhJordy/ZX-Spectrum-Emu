{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++ build active file",
            "command": "g++",
            "args": [
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}.exe",
                "-IC:/Users/Jordan/msys64/mingw32/include/SDL2",
                "-IC:/Users/Jordan/msys64/mingw32/include/GL",
                "-LC:/Users/Jordan/msys64/mingw32/lib",
                "-lglew32",
                "-lSDL2",
                "-lSDL2main",
                "-lopengl32"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}
